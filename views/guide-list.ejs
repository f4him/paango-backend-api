
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Availability</th>
      <th>Location</th>
      <th>Base price</th>
      <th>Site list</th>
      <th>Update/Delete</th>
   
    </tr>
  </thead>
  <tbody>
    <% if(data.length){
   
    for(var i = 0; i< data.length; i++) {%>  
    <tr>
      <td><%= (i+1) %></td>
      <td><%= data[i].username%></td>
      <td><%= data[i].availability%></td>
      <td><%= data[i].location%></td>
      <td><%= data[i].base_price%></td>
      <td><%= data[i].site_list%></td>
      <td><a href="/update-guide/<%= data[i]._id%>">UPDATE</a>     <a href="/delete-guide/<%= data[i]._id%>">DELETE</a></td>
    </tr>
    <% }
             
     }else{ %>
         <tr>
            <td colspan="4">No user</td>
         </tr>
      <% } %>    
    
  </tbody>
  </table>

    <!-- include header -->
    <%- include('include/_footer') %>
    <!-- /include header -->