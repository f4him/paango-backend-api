
<%- include('include/_header') %>



<form method="POST" action="/update-hotel-manager/<%= user._id%>" class="add-item-form">
    
    <div class="form-field">
      <label for="username">Manager name</label>
      <input class="box-shape" type="text" name="username" id="username" placeholder="username" value="<%= user.username%>" required />
    </div>

    <div class="form-field">
      <label for="password">password</label>
      <input class="box-shape" type="password" name="password" id="password" placeholder="easy password to remember" required />
    </div>

    <div class="form-field">
        <label for="hotelname">Hotel name:</label>
        <input class="box-shape" type="text" name="hotelname" id="hotelname" placeholder="hotel name" value="<%= user.hotelname%>" required />
      </div>

    <div class="form-field">
        <label for="location">Location</label>
        <input class="box-shape" type="text" name="location" id="location" placeholder="Location of hotel" value="<%= user.location%>" required />
      </div>
    


    <div class="form-field">
      <input type="submit" value="Update Hotel Manager" />
    </div>
  </form>

<a href="/hotel-manager-list">Back to hotel manager list</a>


<%- include('include/_footer') %>
