
<%- include('include/_header') %>



<form method="POST" action="/add-guide" class="add-item-form">
    
    <div class="form-field">
      <label for="username">Guide name</label>
      <input class="box-shape" type="text" name="username" id="username" placeholder="username" required />
    </div>

    <div class="form-field">
      <label for="password">Password</label>
      <input class="box-shape" type="password" name="password" id="password" placeholder="easy password to remember" required />
    </div>

    <div class="form-field">
        <label for="availability">Availability</label>
        <input class="box-shape" type="text" name="availability" id="availability" placeholder="availability" required />
      </div>

      <div class="form-field">
        <label for="location">Location</label>
        <input class="box-shape" type="text" name="location" id="location" placeholder="Location of guide" required />
      </div>


      <div class="form-field">
        <label for="base_price">Base price</label>
        <input class="box-shape" type="text" name="base_price" id="base_price" placeholder="base price (must be a number)" required />
      </div>

      <div class="form-field">
        <label for="site_list">Site list</label>
        <input class="box-shape" type="text" name="site_list" id="site_list" placeholder="site list" required />
      </div>


    


    <div class="form-field">
      <input type="submit" value="Add guide" />
    </div>
  </form>




<%- include('include/_footer') %>
