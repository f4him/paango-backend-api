<h2><a href="/userlist">USER LIST</a></h2>
  <form method="POST" action="/adduser" class="add-item-form">
    <div class="form-field">
      <label for="username">username</label>
      <input class="box-shape" type="text" name="username" id="username" placeholder="a username for login" required />
    </div>
    <div class="form-field">
      <label for="password">password</label>
      <input class="box-shape" type="password" name="password" id="password" placeholder="an easy password to remember" required />
    </div>
    <div class="form-field">
      
      <label for="role">Select role:</label>
      
      <input type="radio" id="admin" name="role" value="admin">
      <label for="admin">Admin</label><br>

      <input type="radio" id="fieldagent" name="role" value="agent">
      <label for="fieldagent">Field agent</label><br>
      
      <input type="radio" id="guide" name="role" value="guide">
      <label for="guide">Guide</label><br>
    </div>


    <div class="form-field">
      <label for=""></label>
      <input type="submit" value="Add User" />
    </div>
  </form>

