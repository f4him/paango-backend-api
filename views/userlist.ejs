<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Role</th>
      <th>Update/Delete</th>
   
    </tr>
  </thead>
  <tbody>
    <% if(data.length){
   
    for(var i = 0; i< data.length; i++) {%>  
    <tr>
      <td><%= (i+1) %></td>
      <td><%= data[i].username%></td>
      <td><%= data[i].role%></td>
      <td><a href="/user/<%= data[i]._id%>">UPDATE</a>     <a href="/delete/user/<%= data[i]._id%>">DELETE</a></td>
    </tr>
    <% }
             
     }else{ %>
         <tr>
            <td colspan="4">No user</td>
         </tr>
      <% } %>    
    
  </tbody>
  </table>
  <a href="/adduser">Add another user</a>

