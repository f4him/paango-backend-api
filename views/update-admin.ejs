
<%- include('include/_header') %>



<form method="POST" action="/update-admin/<%=user._id%>" class="add-item-form">
    
    <div class="form-field">
      <label for="username">Admin name</label>
      <input class="box-shape" type="text" name="username" id="username" placeholder="username" value="<%= user.username%>" required />
    </div>

    <div class="form-field">
      <label for="password">password</label>
      <input class="box-shape" type="password" name="password" id="password" placeholder="easy password to remember" required />
    </div>

    <div class="form-field">
      <input type="submit" value="Update admin" />
    </div>
  </form>

<a href="/admin-list">Back to admin list</a>


